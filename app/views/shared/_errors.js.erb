<% if errors.kind_of?(Array) %>
    <% errors.each do |error| %>
        <% error.full_messages.each do |msg| %>
            toastr["error"]("<%= msg %>");
            $('#loader-wrapper').hide();
        <% end %>
    <% end %>
<% else %>
    <% if errors.full_messages %>
        <% errors.full_messages.each do |msg| %>
            toastr["error"]("<%= msg %>");
            $('#loader-wrapper').hide();
        <% end %>
    <% end %>
<% end %>

toastr.options = {
  "closeButton": true,
  "debug": false,
  "newestOnTop": false,
  "progressBar": false,
  "positionClass": "toast-top-right",
  "preventDuplicates": false,
  "onclick": null,
  "showDuration": "300",
  "hideDuration": "1000",
  "timeOut": "5000",
  "extendedTimeOut": "1000",
  "showEasing": "swing",
  "hideEasing": "linear",
  "showMethod": "fadeIn",
  "hideMethod": "fadeOut"
}