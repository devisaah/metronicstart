<%- model_class = Noticia -%>


var content = "<%= escape_javascript(render partial: 'shared/modal', locals: {
    modal_class: 'modal_show_noticia',
    modal_id: "modal_show_noticia_#{@noticia.id.to_s}",
    modal_title: t('helpers.titles.show', :model => model_class.model_name.human.titleize),
    modal_body: render(partial: 'noticias/show', locals: {resource: @noticia, remote: true}),
    modal_buttons: render(partial: 'noticias/show_actions' , locals: {noticia: @noticia, remote: true})
  })%>";
if ($("#modal_show_noticia_<%= @noticia.id.to_s %>").length) {
    $("#modal_show_noticia_<%= @noticia.id.to_s %>").modal('remove');
}
$(".modals").append(content);
$("#modal_show_noticia_<%= @noticia.id.to_s %>").modal('show');