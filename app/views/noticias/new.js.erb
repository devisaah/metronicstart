<%- model_class = Noticia -%>

var content = "<%= escape_javascript(render partial: 'shared/modal', locals: {
    modal_class: 'modal_new_noticia',
    modal_id: "modal_new_noticia_#{@noticia.id.to_s}",
    modal_title: t('helpers.titles.new', :model => model_class.model_name.human.titleize),
    modal_body: render(partial: 'noticias/form', locals: {remote: 'true'}),
    modal_buttons: render(partial: 'noticias/form_actions')
  })%>";

if (<%= @noticia.errors.any? %>) {
  $("#modal_new_noticia_<%= @noticia.id.to_s %>").modal('remove');
}
$(".modals").append(content);
$("#modal_new_noticia_<%= @noticia.id.to_s %>").modal('show');