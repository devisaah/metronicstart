<table align="center" cellpadding="0" cellspacing="0" class="container-for-gmail-android" width="100%">
  <tr>
    <td align="center" valign="top" width="100%" style="background-color: #f7f7f7;" class="content-padding">
      <center>
        <table cellspacing="0" cellpadding="0" width="600" class="w320">
          <tr>
            <td class="header-lg">
              Olá <%= @resource.email %>,
            </td>
          </tr>
          <tr>
            <td class="free-text" style="font-size: 20px;">
              <br><br><br>
              <% if @resource.try(:unconfirmed_email?) %>
                Estamos entrando em contato para notificar que seu email está sendo alterado para <%= @resource.unconfirmed_email%>.
              <% else %>
                Estamos entrando em contato para notificar que seu e-mail foi alterado para <%= @resource.email %>.
              <% end %>

              <br><br><br>
            </td>
          </tr>
          <tr>
            <td class="button">
              <div>
              </div><br>
              <br><br><br>
            </td>
          </tr>
        </table>
      </center>
    </td>
  </tr>
</table>