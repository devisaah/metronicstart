<div class="form-group mb-5">
  <%= f.text_field :nome, autofocus: true, autocomplete: "name", class: "form-control h-auto form-control-solid py-4 px-8", placeholder: "Nome" %>
</div>
<div class="form-group mb-5">
  <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control h-auto form-control-solid py-4 px-8", placeholder: "Login" %>
</div>
<div class="form-group mb-5">
  <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control h-auto form-control-solid py-4 px-8", placeholder: "E-mail" %>
</div>
<div class="form-group mb-5">
  <%= f.password_field :password, autocomplete: "current-password", class: "form-control h-auto form-control-solid py-4 px-8", placeholder: "Senha" %>
</div>
<div class="form-group mb-5">
  <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control h-auto form-control-solid py-4 px-8", placeholder: "Confirmar Senha" %>
</div>

<%= f.submit "Salvar", class: "btn btn-primary font-weight-bold px-9 py-4 my-3 mx-4" %>