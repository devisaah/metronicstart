<div class="login-signin">
  <div class="mb-20">
    <h3>Fa√ßa login</h3>
    <div class="text-muted font-weight-bold">Digite seus dados para acessar sua conta:</div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {css: "form"}) do |f| %>
    <% unless flash.empty? %>
      <% if flash.key?(:alert) %>
        <div class="alert alert-danger">
          <button class="close" data-close="alert"></button>
          <span><%= flash[:alert]%></span>
        </div>
      <% end %>
      <% if flash.key?(:notice) %>
        <div class="alert alert-success">
          <button class="close" data-close="alert"></button>
          <span><%= flash[:notice]%></span>
        </div>
      <% end %>
    <% end %>
    <div class="form-group mb-5">
      <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "form-control h-auto form-control-solid py-4 px-8", placeholder: "Login" %>
    </div>
    <div class="form-group mb-5">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control h-auto form-control-solid py-4 px-8", placeholder: "Senha" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-group d-flex flex-wrap justify-content-between align-items-center">
        <label class="checkbox m-0 text-muted">
          <%= f.check_box :remember_me %>Lembre de mim
          <span></span>
        </label>
      </div>
    <% end  %>
    <%= f.submit "Entrar", class: "btn btn-primary font-weight-bold px-9 py-4 my-3 mx-4" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>