<%- model_class = Mensagem -%>

<% content_for :page_title, t('helpers.titles.show', :model => model_class.model_name.human.titleize) %>

<% content_for :breadcrumb do %>
    <li class="breadcrumb-item">
        <%= link_to model_class.model_name.human(count: 2).titleize, mensagens_path, class: "text-muted" %>
    </li>
    <li class="breadcrumb-item">
        <%= t('helpers.links.show') %>
    </li>
<% end %>

<% content_for :portlet_title do %>
   <%= t('helpers.titles.show', :model => model_class.model_name.human.titleize) %>
<% end %>

<div class="card-body">
    <%= render "show", resource: @mensagem  %>
</div>

<div class="card-footer">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <%= link_to t("helpers.links.back"), mensagens_path, class: "btn btn-secondary" %>
        </div>
    </div>
</div>