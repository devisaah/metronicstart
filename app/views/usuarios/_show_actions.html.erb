<%- model_class = Usuario -%>

<% remote ||= remote %>

<%= link_to edit_usuario_path(usuario), :class => 'btn btn-warning', :remote => remote do  %>
	<%= t("helpers.links.edit") %>
<% end %>

<%= link_to usuario_path(usuario),
    :remote => remote,
	:method => 'delete',
	:data => { :confirm => t("helpers.links.confirm_destroy",
	:model => model_class.model_name.human) },
	:class => 'btn btn-danger' do %>
	<%= t("helpers.links.destroy") %>
<% end %>