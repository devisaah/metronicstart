<%- model_class = Usuario -%>

var content = "<%= escape_javascript(render partial: 'shared/modal', locals: {
    modal_class: 'modal_edit_password',
    modal_id: "modal_edit_password_#{@usuario.id.to_s}",
    modal_title: 'Alterar Senha',
    modal_body: render(partial: 'usuarios/form_password'),
    modal_buttons: render(partial: 'usuarios/form_actions')
  })%>";

if (<%= @usuario.errors.any? %>) {
  $("#modal_edit_password_<%= @usuario.id.to_s %>").modal('remove');
}
$(".modals").append(content);
$("#modal_edit_password_<%= @usuario.id.to_s %>").modal('show');