<%- model_class = Usuario -%>

<% resource ||= resource %>
<% remote ||= remote %>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:permissao) %> :</strong></dt>
      <dd><%= link_to resource.try(:permissao).try(:descricao), permissao_path(resource.try(:permissao)), remote: true %></dd>
      <dt><strong><%= model_class.human_attribute_name(:nome) %> :</strong></dt>
      <dd><%= resource.try(:nome) %></dd>
      <dt><strong><%= model_class.human_attribute_name(:email) %> :</strong></dt>
      <dd><%= resource.try(:email) %></dd>
      <dt><strong><%= model_class.human_attribute_name(:username) %> :</strong></dt>
      <dd><%= resource.try(:username) %></dd>
      <dt><strong><%= model_class.human_attribute_name(:ativo) %> :</strong></dt>
      <dd><%= resource.try(:ativo) ? 'SIM' : 'NÃƒO'  %></dd>
    </dl>
  </div>
  <% if can? :audit, model_class %>
    <div class="col-md-12 mb-4">
      <%= render partial: "audits/table", locals: {audits: resource.try(:audits), show_collapse: 'show'} %>
    </div>
  <% end %>
</div>
