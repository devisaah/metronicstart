<%- model_class = Usuario -%>

var content = "<%= escape_javascript(render partial: 'shared/modal', locals: {
    modal_class: 'modal_edit_usuario',
    modal_id: "modal_edit_ano_#{@usuario.id.to_s}",
    modal_title: t('helpers.titles.edit', :model => model_class.model_name.human.titleize),
    modal_body: render(partial: 'usuarios/form', locals: {remote: 'true'}),
    modal_buttons: render(partial: 'usuarios/form_actions')
  })%>";

if (<%= @usuario.errors.any? %>) {
  $("#modal_edit_ano_<%= @usuario.id.to_s %>").modal('remove');
}
$(".modals").append(content);
$("#modal_edit_ano_<%= @usuario.id.to_s %>").modal('show');