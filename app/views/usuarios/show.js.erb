<%- model_class = Usuario -%>


var content = "<%= escape_javascript(render partial: 'shared/modal', locals: {
    modal_class: 'modal_show_usuario',
    modal_id: "modal_show_usuario_#{@usuario.id.to_s}",
    modal_title: t('helpers.titles.show', :model => model_class.model_name.human.titleize),
    modal_body: render(partial: 'usuarios/show', locals: {resource: @usuario, remote: true}),
    modal_buttons: render(partial: 'usuarios/show_actions' , locals: {usuario: @usuario, remote: true})
  })%>";
if ($("#modal_show_usuario_<%= @usuario.id.to_s %>").length) {
    $("#modal_show_usuario_<%= @usuario.id.to_s %>").modal('remove');
}
$(".modals").append(content);
$("#modal_show_usuario_<%= @usuario.id.to_s %>").modal('show');